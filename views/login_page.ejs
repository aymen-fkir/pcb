<html>

<head>
  <meta charset="UTF-8">
  <title>Pricing Table</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
  <section>
    <div class="container-fluid">
      <div class="container">
        <div class="row">
          <div class="col-sm-4">
            <div class="card text-center">
              <div class="title">
                <i class="fa fa-regular fa-exclamation"></i>
                <h2>CO2</h2>
              </div>
              <div class="price">
                <h4><%=data.static.co2%></h4>
              </div>
            </div>
          </div>
          <!-- END Col one -->
          <div class="col-sm-4">
            <div class="card text-center">
              <div class="title">
                <i class="fa fa-regular fa-exclamation"></i>
                <h2>NO2</h2>
              </div>
              <div class="price">
                <h4><%=data.static.nox%></h4>
              </div>
            </div>
          </div>
          <!-- END Col two -->
          <div class="col-sm-4">
            <div class="card text-center">
              <div class="title">
                <i class="fa fa-regular fa-exclamation"></i>
                <h2>CO</h2>
              </div>
              <div class="price">
                <h4><%=data.static.co%></h4>
              </div>
            </div>
          </div>
          <!-- END Col three -->
          <div class="col-sm-4">
            <div class="card text-center">
              <div class="title">
                <i class="fa fa-regular fa-exclamation"></i>
                <h2>SO2</h2>
              </div>
              <div class="price">
                <h4><%=data.static.so2%></h4>
              </div>
            </div>
          </div>
          <!-- END Col four -->
        </div>
      </div>
    </div>
  </section>
  <div class="chart">
    <canvas id="myLineChart_pm1"></canvas>
    <canvas id="myLineChart_pm2_5"></canvas>
    <canvas id="myLineChart_pm10"></canvas>
    <script>
      // Sample chart data
      var chartData1 = {
        labels: [11,12,13],
        datasets: [{
          label: 'PM1',
          data: [<%=data.chart[0].pm1%>,<%=data.chart[1].pm1%>,<%=data.chart[2].pm1%>],
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 2,
          fill: false,
        }]
      };

      var chartData2 = {
        labels: [11,12,13],
        datasets: [{
          label: 'PM10',
          data: [<%=data.chart[0].pm10%>,<%=data.chart[1].pm10%>,<%=data.chart[2].pm10%>],
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 2,
          fill: false,
        }]
      };

      var chartData3 = {
        labels: [11,12,13],
        datasets: [{
          label: 'PM2,5',
          data: [<%=data.chart[0].pm2_5%>,<%=data.chart[1].pm2_5%>,<%=data.chart[2].pm2_5%>],
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 2,
          fill: false,
        }]
      };
  
      // Chart configuration
      var chartOptions = {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      };
      // Get the canvas context
      var ctx1 = document.getElementById('myLineChart_pm1').getContext('2d');
      var ctx2 = document.getElementById('myLineChart_pm10').getContext('2d');
      var ctx3 = document.getElementById('myLineChart_pm2_5').getContext('2d');
  
      // Create the line chart
      var myLineChart1 = new Chart(ctx1, {
        type: 'line',
        data: chartData1,
        options: chartOptions
      });
      var myLineChart2 = new Chart(ctx2, {
        type: 'line',
        data: chartData2,
        options: chartOptions
      });
      var myLineChart3 = new Chart(ctx3, {
        type: 'line',
        data: chartData3,
        options: chartOptions
      });
    </script>
  </div>
 
</body>

</html>